---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
// import Header from '../components/Header.astro';
// import Footer from '../components/Footer.astro';

type Props = CollectionEntry<"blog">["data"];

const { title, description, heroImage, heroImageFromUrl, heroImageFromName } =
	Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}

			@media (max-width: 720px) {
				main {
					width: 100%;
					padding: 16px 0;
				}
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			@media (max-width: 720px) {
				.prose {
					width: 100%;
					max-width: 100%;
					padding: 0;
					.title,
					h1,
					h2,
					h3,
					h4,
					h5,
					h6 {
						margin: 0 16px;
					}
					p {
						margin: 1.6em 16px;
					}
					p:has(img) {
						margin: 2em 0;
					}
				}
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.image-quote {
				font-size: 0.8em;
				color: #999999;
			}
			.image-quote a {
				color: #999999;
			}
			.to-top {
				display: block;
				margin: 0.6em 0 0 1em;
				font-weight: bold;
				font-size: 1.2em;
				color: #444444;
				text-decoration: none;
			}
			.to-top:hover {
				color: lime;
			}
			.bottom-buttons {
				margin-top: 40px;
				display: flex;
				justify-content: center;
			}
			.bottom-buttons a {
				display: block;
				max-width: 100%;
				min-width: 240px;
				padding: 12px 16px;
				text-decoration: none;
				border-radius: 12px;
				text-align: center;
				background-color: #333333;
				color: lime;
				box-shadow:
					0px 0px 0px 0px rgba(19, 21, 26, 0.3),
					0px 1px 2px 0px rgba(19, 21, 26, 0.29),
					0px 4px 4px 0px rgba(19, 21, 26, 0.26),
					0px 10px 6px 0px rgba(19, 21, 26, 0.15),
					0px 17px 7px 0px rgba(19, 21, 26, 0.04),
					0px 26px 7px 0px rgba(19, 21, 26, 0.01);
			}
			footer {
				text-align: center;
				color: #222222;
				padding: 60px 0 48px 0;
			}
		</style>
	</head>

	<body>
		<a href="/" class="to-top">珍スポ研究室</a>
		<main>
			<article>
				<div class="prose">
					<div class="hero-image">
						{heroImage && <img src={heroImage} alt={title} />}
					</div>
					{
						heroImageFromUrl && (
							<blockquote class="image-quote" style="margin-top: 12px;">
								画像: <a href={heroImageFromUrl}>{heroImageFromName}</a>より引用
							</blockquote>
						)
					}
					<div class="title">
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<div class="bottom-buttons">
			<a href="/">珍スポ研究室 トップに戻る</a>
		</div>
		<footer>
			<p>© 2024 珍スポ研究室</p>
		</footer>
	</body>
</html>
