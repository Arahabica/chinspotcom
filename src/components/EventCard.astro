---
interface Props {
	title: string;
	image: string;
    place: string;
    startTime: string;
    capacity: string;
}
const { title, image, place, startTime, capacity } = Astro.props;
---
<div class="event">
  <div class="image-wrapper">
      <img src={image} alt={title}>
  </div>
  <div class="event-content">
      <div class="date">
          <div class="date-month">09</div>
          <div class="date-deli">/</div>
          <div class="date-day">20</div>
          <div class="date-week">(金)</div>
      </div>
      <div class="event-desc">
          <div class="event-hour">{startTime}</div>
          <div class="event-place">{place}</div>
          <div class="event-title">{title}</div>
          <div class="event-capacity">{capacity}</div>
      </div>
  </div>
  <div class="event-label">募集中！</div>
</div>
<style>
.event {
            background-color: white;
            width: 100%;
            position: relative;
        }
        @media (min-width: 480px) {
          .event {
            width: 400px;
          }
        }
        @media (min-width: 720px) {
          .event {
            width: 340px;
          }
        }
        .event img {
            width: 100%;
            height: 120px;
            object-fit: cover;
            display: block;
        }
        .event .event-content {
            padding: 8px;
            display: flex;
        }
        .event .date {
            width: 56px;
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }
        .event .date-month {
            align-self: start;
        }
        .event .date-deli {
            font-size: 2rem;
            transform: rotate(20deg);
            margin: -1.5rem 0 -1.5rem 0;
        }
        .event .date-day {
            align-self: end
        }
        .event .date-week {
            margin-top: -2px;
        }
        .event .event-desc {
            padding: 0 0 0 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }
        .event .event-hour {
            font-size: .8rem;
            font-weight: 600;
        }
        .event .event-place {
            font-size: .8rem;
            color: #999999;
        }
        .event .event-title {
            font-weight: 600;
            margin-top: 4px;
        }
        .event .event-capacity {
            margin-top: 4px;
            font-size: 1.2rem;
            color: #999999;
            text-align: right;
        }
        .event .event-label {
            position: absolute;
            bottom: 0;
            left: 4px;
            color: rgba(255, 0, 0, 0.8);
            padding: 4px;
            font-size: 1.2rem;
            font-weight: bold;
        }
</style>